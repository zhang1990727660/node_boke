<%- include("header",{type:'posts'})%>

<div class="container">
    <% if(posts && posts.length>0){ %>
    <ul class="posts spost">
        <% posts.forEach(function(res){ %>
        <li onclick="window.location.href='/posts/<%=res.id%>'">
            <div class="author">
                <span>author：<%= res.name%></span>
                <span>评论数：<%=res.comments%></span>
                <span>浏览量：<%=res.pv%></span>
            </div>
            <div class="comment_pv">
                <span><%- res.moment%></span>
            </div>
            <a href="javascript:;">
                <div class="title">
                    <% if(res.avator){ %>
                        <img class="userAvator" src=<%=res.avator %> alt=""/>
                    <% }else{ %>
                        <img class="userAvator" src="/images/default.jpg" %> alt=""/>     
                    <% } %>  
                    <%=res.title%>
                </div>
                <div class="content markedown">
                    <p><%- res.content%></p>
                </div>
            </a>
        </li>
        <% }) %>
    </ul>
    <% }else{ %>
        <p class="tips">暂时没有文章，快去前往发表吧</p>
    <% } %>
</div>

<% include footer %>